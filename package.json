{
	"name": "hotspot",
	"slug": "mikrotik-hotspot",
	"version": "2.0.0",
	"prev_stable_version": "1.1.7",
	"author": "Ashwab, Essam Barghsh",
	"homepage": "https://www.ashwab.com",
	"scripts": {
		"build": "npm run plans && npm run shortcuts && npm run pos && npm run components",
		"dev": "npm run plans:dev && npm run shortcuts:dev && npm run pos:dev && npm run components:dev",
		"plans": "./configure-plans.sh --file login.html && ./configure-plans.sh --file alogin.html",
		"plans:dev": "./configure-plans.sh --file login.html --limit 3 && ./configure-plans.sh --file alogin.html --limit 3",
		"plans:validate": "./configure-plans.sh --validate",
		"plans:backups": "./configure-plans.sh --list-backups",
		"plans:status": "./configure-plans.sh --file status.html",
		"plans:help": "./configure-plans.sh --help",
		"shortcuts": "./configure-shortcuts.sh",
		"shortcuts:dev": "./configure-shortcuts.sh --limit 3",
		"shortcuts:validate": "./configure-shortcuts.sh --validate",
		"shortcuts:help": "./configure-shortcuts.sh --help",
		"pos": "./configure-pos.sh --file login.html && ./configure-pos.sh --file alogin.html",
		"pos:dev": "./configure-pos.sh --file login.html --limit 3 && ./configure-pos.sh --file alogin.html --limit 3",
		"pos:validate": "./configure-pos.sh --validate",
		"pos:help": "./configure-pos.sh --help",
		"components": "npm run footer",
		"components:dev": "npm run footer:dev",
		"footer": "./components.sh comp footer.html file alogin.html && ./components.sh comp footer.html file login.html",
		"footer:dev": "./components.sh comp footer.html file alogin.html --no-compress && ./components.sh comp footer.html file login.html --no-compress"
	}
}